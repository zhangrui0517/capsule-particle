{
  "compilerOptions": {
    // 目标ECMAScript版本
    "target": "es2018",
    // 模块系统
    "module": "esnext",
    // 模块解析策略
    "moduleResolution": "node",
    // 生成相应的.d.ts文件
    "declaration": true,
    // 输出目录
    "outDir": "./dist",
    // 启用严格类型检查
    "strict": true,
    // 允许导入CommonJS模块
    "esModuleInterop": true,
    // 跳过库文件的类型检查
    "skipLibCheck": true,
    // 强制在文件名中使用一致的大小写
    "forceConsistentCasingInFileNames": true,
    // 允许导入JSON模块
    "resolveJsonModule": true,
    // 基础目录，用于解析非相对模块名
    "baseUrl": ".",
    // 模块名到基于baseUrl的路径映射
    "paths": {
      "*": ["src/*"]
    },
    // 包含的库文件
    "lib": ["dom", "esnext"]
  },
  // 要包含的文件匹配模式
  "include": ["src/**/*"],
  // 要排除的文件匹配模式
  "exclude": ["node_modules", "**/*.test.ts"]
} 